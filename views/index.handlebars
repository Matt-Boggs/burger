<style>
    *{
        outline: 1px solid black;
        /*font-family: 'Lobster', cursive;*/
    }
    header {
        text-align: center;
        font-size: 60px;
    }
    img {
        display: block;
        margin-left: auto; margin-right: auto;

    }
    #burgerTables {
        margin-bottom: 50px;
    }
    #addburg {
        text-align: center;
    }
    #eatMe {
        display: block;
    }
    #tableFill {
        display: block;
        margin-bottom: 50px;
    }
    
</style>


<main class="container">
    <header>EAT DA BURGER</header>
        <img src="assets/img/burger.png">
    <div class="row">
        <div class="col-12">
            <h1 id="addburg">ADD BURGER BUTTON</h1>
        </div>
    </div>
    <div id="burgerTables" class="row">
        <div id="burgersToEat" class="col-5">
            <ul>
                {{#each burgers}}
                <li>
                    <span id="tableFill">{{burger_name}} : {{devoured}}<button id="eatMe">EAT ME</button></span>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-2">

        </div>
        <div id="burgersEaten" class="col-5">
            <ul>
                {{#each burgers}}
                <li>
                    {{burger_name}} : {{devoured}}
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</main>





<script src="https://code.jquery.com/jquery.js"></script>
