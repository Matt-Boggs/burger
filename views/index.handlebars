<header class="col-12">Eat Da Burgers!</header>
<div class="col-12">
  <img src="/assets/img/burger.png">
</div>
<div class="col-12" id="addArea">
  <h2>Add a burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burgAdd">burger Name:</label>
      <input type="text" id="burgAdd" name="name">
    </div>


    <button type="submit">Add burger</button>
  </form>
</div>
<div class="col-5">
  <h2>burgers that are not devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="eat-me" data-id="{{id}}">
            EAT ME
          </button>
          <button class="delete-burg" data-id="{{this.id}}">DELETE!</button>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>
<div class="col-2"></div>
<div class="col-5">
  <h2>burgers that are devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
        <li>
          {{burger_name}}
          <button class="delete-burg" data-id="{{this.id}}">DELETE!</button>
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>

